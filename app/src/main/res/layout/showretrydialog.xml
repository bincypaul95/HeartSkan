<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.evitalz.homevitalz.heartskan.DialogRetryHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reasons"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/device_not_found"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reasonhead"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reasons"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Reasons:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reason1"
            android:padding="5dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reasonhead"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="1.Device is in off state." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reason2"
            android:padding="5dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="2.Bluetooth Error (Click RESET button and Retry)" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnreset"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:onClick="@{handler::onRetryClicked}"
            app:layout_constraintTop_toBottomOf="@+id/reason2"
            android:text="@string/retry"
            android:id="@+id/btnretry"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/btnretry"
            app:layout_constraintRight_toLeftOf="@+id/btncancel"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/reason2"
            android:text="@string/reset"
            android:onClick="@{handler::onResetClicked}"
            android:id="@+id/btnreset"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason2"
            android:text="@string/cancel"
            android:onClick="@{handler::onCancelClicked}"
            android:id="@+id/btncancel"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>