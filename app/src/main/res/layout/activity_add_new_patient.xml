<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.evitalz.homevitalz.cardfit.HandlerAddnew" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD NEW PATIENT"
                android:textColor="@color/purple_700"
                android:textAlignment="center"
                android:id="@+id/tvhead"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


            <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:id="@+id/textinput1"
                        app:errorEnabled="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content"
                       app:layout_constraintTop_toBottomOf="@+id/tvhead">

                        <EditText
                            android:layout_margin="10dp"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:id="@+id/etusername"
                            android:hint="Name*"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:inputType="textPersonName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:id="@+id/textinput2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textinput1">

                <EditText
                    android:layout_margin="10dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:id="@+id/etdob"
                    android:hint="Dob*"
                    android:focusable="false"
                    android:onClick="@{handler::onDobClicked}"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:text="Gender"
                        android:padding="5dp"
                        android:id="@+id/tvgender"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textinput2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioGroup
                        android:id="@+id/radiogender"
                        android:layout_margin="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvgender"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton

                            android:id="@+id/rbmale"
                            android:text="Male"
                            android:onClick="@{handler::onMaleClicked}"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <RadioButton

                            android:id="@+id/rbfemale"
                            android:text="Female"
                            android:onClick="@{handler::onFemaleClicked}"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <RadioButton

                            android:id="@+id/rbother"
                            android:text="Other"
                            android:onClick="@{handler::onOtherClicked}"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:id="@+id/textinput3"
                        app:errorEnabled="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/radiogender">

                        <EditText
                            android:layout_margin="10dp"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:id="@+id/etphonenumber"
                            android:hint="@string/phone_number"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:text="ADD"
                android:onClick="@{handler::onAddNewClicked}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textinput3"
                android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>