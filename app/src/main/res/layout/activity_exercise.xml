<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

            <variable
                name="handler"
                type="com.evitalz.homevitalz.cardfit.HandlerExcersice" />

           <variable
               name="viewmodel"
               type="com.evitalz.homevitalz.cardfit.ui.viewmodels.ExcersiceViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.exercise.ExerciseActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/appbar"
                android:background="#fff"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cancel"
                        android:id="@+id/btncancel"
                        android:gravity="start"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnsave"
                        android:layout_marginRight="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/purple_700"
                        android:text="@{viewmodel.btnsave}"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotoregular"
                        android:gravity="right"
                        />

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/appbar"
                android:text="Add Excersice"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@font/robotoregular"
                android:layout_margin="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tvheading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linduration"
                app:layout_constraintTop_toBottomOf="@+id/tvheading">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantitytextfield"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textfield"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etduration"
                        android:text="@{viewmodel.duration}"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:hint="Duration" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spinnertextfield"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textfield"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerUnitlist"
                        android:hint="Type"
                        android:text="@{viewmodel.type}"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/notetextfield"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/linduration"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etnotes"
                    android:text="@{viewmodel.note}"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:hint="Add Note" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/notetextfield"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:id="@+id/lindatetime">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textfield1"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textfield"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvdate"
                        android:text="@{viewmodel.strDate}"
                        android:onClick="@{handler::onDateClicked}"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:hint="Date" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textfield2"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textfield"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvtime"
                        android:text="@{viewmodel.strtime}"
                        android:onClick="@{handler::onTimeClicked}"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:hint="Time" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>