<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.evitalz.homevitalz.heartskan.UserInfoHandler" />

        <variable
            name="viewmodel"
            type="com.evitalz.homevitalz.heartskan.ui.activities.userinfo.EditUserInfoViewModel" />

        <variable
            name="patient"
            type="com.evitalz.homevitalz.heartskan.database.Patient_Reg" />

        <variable
            name="patientdetails"
            type="com.evitalz.homevitalz.heartskan.database.Patient_details" />


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".EditUserInfo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                tools:context=".Activity.LoginActivty">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:src="@drawable/chat_user"
                    android:id="@+id/ivuserimage"
                    android:onClick="@{handler::onImagePickClicked}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:id="@+id/tvchangepic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/ivuserimage"
                    android:text="Change Picture"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textfield"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvchangepic"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etusername"
                        android:text="@={patient.pname}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Patient Name" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textfield1"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textfield"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etdob"
                        android:onClick="@{handler::onDobClicked}"
                        android:text="@={patient.pdob}"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of Birth" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textfield2"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:hint="Blood Group"
                    app:layout_constraintTop_toBottomOf="@+id/textfield1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etbloodgroup"
                        android:onClick="@{handler::onbloodgroupclicked}"
                        android:text="@={patient.bldgrp}" />


                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textfield4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/contextfield3"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldwaist"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etwaist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={patientdetails.waist}"
                            android:hint="Waist" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldhip"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ethip"
                            android:text="@={patientdetails.hip}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hip" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/contextfield3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/contextfield7"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldsys"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etsys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Systolic" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfielddia"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etdia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Diastolic" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/contextfield7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/contextfield8"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldheight"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etheight"
                            android:text="@={patient.height}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Height" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldweight"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etweight"
                            android:text="@={patient.weight}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Weight" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textfield2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/textfield4"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfielddiab"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:hint="DiabeticType"
                        app:layout_constraintTop_toBottomOf="@+id/textfield2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/etdiabetictype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{handler::onDiabetictypeClicked}"
                            android:text="@={patientdetails.bmi}" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textfieldhba1ct"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ethbalc"
                            android:text="@={patientdetails.hba1c}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="HbA1c" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>