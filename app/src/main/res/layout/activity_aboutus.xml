<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AboutUs">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardView1"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/purple_500"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="@string/app_name" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView1"
                android:id="@+id/cardView2"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About this App"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        android:id="@+id/tvhead"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvhead"
                        android:text="@string/aboutus" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                android:id="@+id/cardView3"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        android:id="@+id/tvcontact"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAlignment="center" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/phone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvcontact"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:id="@+id/tvphone"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_91_73388_56444"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:id="@+id/tvphone1"
                            android:layout_margin="10dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvcontact"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:id="@+id/tvemail"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvphone"
                            android:drawableLeft="@drawable/ic_baseline_email_24"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sales_evitalz_com"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:id="@+id/tvemail1"
                            app:layout_constraintTop_toBottomOf="@+id/tvphone1"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                             />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:id="@+id/tvlocation"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvemail"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10A, Masilamani St, Parthasarathi Puram, T. Nagar, Chennai, Tamil Nadu 600017"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvemail1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>