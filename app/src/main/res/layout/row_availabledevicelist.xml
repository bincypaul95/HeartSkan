<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="handler"
            type="com.evitalz.homevitalz.heartskan.PairDeviceHandler" />

        <variable
            name="deviceModel"
            type="com.evitalz.homevitalz.heartskan.ui.model.MyDeviceModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:onClick="@{() -> handler.onInsertClicked(deviceModel)}"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="@{deviceModel.devicename}"
                android:id="@+id/tvdevicename"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvmacaddress"
                android:text="@{String.valueOf(deviceModel.devicemac)}"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/add"
            android:id="@+id/btnadddevice"
            android:layout_marginRight="10dp"
            android:onClick="@{() -> handler.onPairClicked(deviceModel)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>