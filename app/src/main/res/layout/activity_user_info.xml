<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.evitalz.homevitalz.heartskan.UserInfoHandler" />

        <variable
            name="viewmodel"
            type="com.evitalz.homevitalz.heartskan.ui.activities.userinfo.UserInfoViewmodel" />

        <variable
            name="patient"
            type="com.evitalz.homevitalz.heartskan.database.ProfileDetails" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/conname"
                android:background="@color/purple_700"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chat_user"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:id="@+id/ivuserimage"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvusername"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivuserimage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="@{patient.pname}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvuserdob"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/tvusername"
                    app:layout_constraintLeft_toRightOf="@+id/ivuserimage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="@{patient.ageAndGender}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:text="Edit Info"
                    android:visibility="visible"
                    android:onClick="@{handler::onEditClicked }"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:drawableTop="@drawable/ic_baseline_edit_24"
                    android:id="@+id/tvediticon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/conname"
                android:background="#555555"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/conname"
                tools:context=".ui.activities.userinfo.UserInfoActivity">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/condob"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/calender"
                        android:padding="5dp"
                        android:id="@+id/ivdob"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvdob"
                        android:text="Date of Birth"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivdob"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvdob1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:text="@{patient.pdob}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivdob"
                        app:layout_constraintTop_toBottomOf="@+id/tvdob" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/condob"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conbldgrp"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/condob">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/bldgrp"
                        android:padding="5dp"
                        android:id="@+id/ivbloodgrp"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvbldgrp"
                        android:text="BloodGroup"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivbloodgrp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvbldgrp1"
                        android:text="@{patient.pbldgrp}"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvbldgrp"
                        app:layout_constraintLeft_toRightOf="@+id/ivbloodgrp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbldgrp"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conkidney"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/condiabetictype">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/kidney"
                        android:padding="5dp"
                        android:id="@+id/ivkidney"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvkidney"
                        android:text="Any Kidney Disease"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivkidney"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvkidney1"
                        android:text="NO"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvkidney"
                        app:layout_constraintLeft_toRightOf="@+id/ivkidney"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conkidney"
                    android:background="#555555"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conheart"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/conkidney">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/heart_shape_with_beats_line"
                        android:padding="5dp"
                        android:id="@+id/ivangina"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvangina"
                        android:text="Heartattack/Angina"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivangina"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvangina1"
                        android:text="NO"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvangina"
                        app:layout_constraintLeft_toRightOf="@+id/ivangina"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conheart"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consteroid"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/conheart">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/cheat"
                        android:padding="5dp"
                        android:id="@+id/ivsteroid"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvsteroid"
                        android:text="Taking Steroid Medications"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivsteroid"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvsteroid1"
                        android:text="NO"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvsteroid"
                        app:layout_constraintLeft_toRightOf="@+id/ivsteroid"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/consteroid"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consmoker"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/consteroid">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/tuxedo"
                        android:padding="5dp"
                        android:id="@+id/ivsmoker"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvsmoker"
                        android:text="Smoker"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivsmoker"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvsmoker1"
                        android:text="NO"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvsmoker"
                        app:layout_constraintLeft_toRightOf="@+id/ivsmoker"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/consmoker"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/condiabetictype"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbmi">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/glucometer"
                        android:padding="5dp"
                        android:id="@+id/ivdiabetic"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvdiabetic"
                        android:text="Diabetic Type"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivdiabetic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvdiabetic1"
                        android:text="@{patient.diabtype}"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvdiabetic"
                        app:layout_constraintLeft_toRightOf="@+id/ivdiabetic"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/condiabetictype"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conbmi"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/weightscale11"
                        android:padding="5dp"
                        android:id="@+id/ivbmi"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvbmi"
                        android:text="Height/Weight"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivbmi"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvbmi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:text='@{patient.pheight+ "/" +patient.pweight}'
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivbmi"
                        app:layout_constraintTop_toBottomOf="@+id/tvbmi" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbmi"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conbp"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbldgrp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/bp1"
                        android:padding="5dp"
                        android:id="@+id/ivbp"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvbp"
                        android:text="@string/BloodPressure"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivbp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvbp1"
                        android:text="@{patient.pbp}"
                        android:background="@color/white"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvbp"
                        app:layout_constraintLeft_toRightOf="@+id/ivbp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conbp"
                    android:background="#555555"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conhbal1c"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/condiabetictype">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/bldgrp"
                        android:padding="5dp"
                        android:id="@+id/ivhbalc"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvhbalc"
                        android:text="HbA1c"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivhbalc"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvhbalc1"
                        android:text="@{patient.hba1c}"
                        android:background="@color/white"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvhbalc"
                        app:layout_constraintLeft_toRightOf="@+id/ivhbalc"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/conhbal1c"
                    android:background="#555555"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</layout>