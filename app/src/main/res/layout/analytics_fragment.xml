<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.evitalz.homevitalz.heartskan.HandlerAnalytics" />

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.evitalz.homevitalz.heartskan.ui.fragments.analytics.AnalyticsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:id="@+id/layout1"
                android:background="@color/purple_700"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".Activity.ShowTestResultsActivity">

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tlMain"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/week" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month" />
                </com.google.android.material.tabs.TabLayout>


                <LinearLayout

                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/lindate"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tlMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:padding="15dp"
                        android:id="@+id/previous"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="fitXY"
                        android:tint="@color/white"
                        android:src="@drawable/left_arrow"
                        android:visibility="visible"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:onClick="@{handler::onPrevious}"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvgraphdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="@{viewModel.strDate}"
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textStyle="bold"
                        android:onClick="@{handler::onDateClicked}"
                        android:gravity="center_horizontal" />

                    <ImageButton
                        android:scaleType="fitXY"
                        android:id="@+id/next"
                        android:focusable="true"
                        android:clickable="true"
                        android:padding="15dp"
                        android:tint="@color/white"
                        android:src="@drawable/left_arrow"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:rotation="180"
                        android:onClick="@{handler::onNext}"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/lindate"
                    android:id="@+id/rlheart">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@drawable/like"
                        android:id="@+id/ivhrv" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@{viewModel.heartrate}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#fff"
                        android:id="@+id/tvheartrate" />

                </RelativeLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewPager"
                    app:layout_constraintTop_toBottomOf="@+id/rlheart"
                    />

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:id="@+id/tabLayout"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_height="20dp"
                    app:tabBackground="@drawable/tab_selector"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/btntype"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/button"
                        android:onClick="@{handler::ondayclicked}"
                        android:id="@+id/tvday"
                        android:text="Day"
                        android:textColor="@color/white"
                        app:layout_constraintRight_toLeftOf="@id/tvweek"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tvweek"
                        android:text="Week"
                        android:onClick="@{handler::onweekclicked}"
                        app:layout_constraintLeft_toRightOf="@id/tvday"
                        app:layout_constraintRight_toLeftOf="@id/tvmonth"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/tvmonth"
                        android:text="Month"
                        android:onClick="@{handler::onmonthclicked}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tvweek"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview"
                android:text="RECENT DATA"
                android:padding="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textview"
                android:id="@+id/recyclerview"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</layout>