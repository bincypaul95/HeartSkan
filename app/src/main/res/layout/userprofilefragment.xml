<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

      

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:background="#DDD"
                android:id="@+id/conuser1"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                    <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                        android:id="@+id/ivuserimage"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:layout_constraintLeft_toLeftOf="parent"-->
<!--                        app:layout_constraintRight_toRightOf="parent"-->
<!--                        android:layout_width="100dp"-->
<!--                        android:layout_height="100dp"-->
<!--                        app:srcCompat="@drawable/chat_user"-->
<!--                        app:civ_border_color="#1e8ff9"-->
<!--                        app:civ_border_width="3dp"-->
<!--                        app:civ_shadow="true"-->
<!--                        app:civ_shadow_color="#000"-->
<!--                        app:civ_shadow_radius="5"-->
<!--                        tools:ignore="MissingClass" />-->

                    <TextView
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/ivuserimage"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:paddingTop="20dp"
                        android:textAlignment="center"
                        android:id="@+id/tvname"
                        android:text="Bincy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        app:layout_constraintTop_toBottomOf="@+id/tvname"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center"
                        android:id="@+id/tvage"
                        android:text="23 yrs, Female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        app:layout_constraintTop_toBottomOf="@+id/tvage"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/btnchangeacc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:text="CHANGE ACCOUNT"
                        android:textColor="#FFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                app:layout_constraintTop_toBottomOf="@+id/conuser1"
                android:layout_height="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:padding="5dp"
                        android:id="@+id/conemail"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            android:id="@+id/tvusername"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bincy"
                            android:id="@+id/tvname1"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toRightOf="@+id/tvusername"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            android:id="@+id/tvemail"
                            app:layout_constraintTop_toBottomOf="@+id/tvusername"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toLeftOf="parent"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bincypaul.elab@gmail.com"
                            android:id="@+id/tvemail1"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                           app:layout_constraintTop_toBottomOf="@+id/tvname1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toRightOf="@+id/tvemail"
                           />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            android:id="@+id/tvphone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvemail"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9994993890"
                            android:id="@+id/tvphone1"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvemail"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toRightOf="@+id/tvphone"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient Details"
                            android:textColor="@color/black"
                            android:id="@+id/tvpatientdetails"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvphone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toLeftOf="parent"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log Out"
                            android:textColor="@color/black"
                            android:id="@+id/tvlogout"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvpatientdetails"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>